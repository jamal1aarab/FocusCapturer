{
  "name": "FocusGard",
  "version": "1.3",
  "description": "Enhance accessibility testing by listing all interactive elements that can receive focus and detect invisible focus issues.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "FocusGard"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "offscreen"
  ],
  "manifest_version": 3
}